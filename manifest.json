{
  "name": "Canvas - detect and download.",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Extension helps detect if canvas is used at the web page and allows to import and save canvas content.",
  "homepage_url": "https://github.com/santriseus/canvas-detect-and-download",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Canvas - detect and download.",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/inject.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "permissions": [
    "*://*/*"
  ]
}